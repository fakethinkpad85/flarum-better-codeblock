{
    "name": "fakethinkpad85/flarum-better-codeblock",
    "description": "Enhances code block insertion with triple backticks and language detection",
    "type": "flarum-extension",
    "version": "1.0.0",
    "require": {
        "flarum/core": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "fakethinkpad85\\BetterCodeblock\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Better Code Blocks",
            "icon": {
                "name": "fas fa-code",
                "backgroundColor": "#684BA6",
                "color": "#fff"
            }
        },
        "flarum-assets": {
            "forum": "assets/forum.js",
            "admin": "assets/admin.js"
        }
    }
} 